<!DOCTYPE html>
<html>
<head>
    <environment names="Development">
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <title>Solved Test</title>
        <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">
        <link href="~/css/app.min.css" rel="stylesheet">
        <link href="~/js/bundles/materialize-rtl/materialize-rtl.min.css" rel="stylesheet">
        <link href="~/css/style.css" rel="stylesheet" />
        <link href="~/css/styles/all-themes.css" rel="stylesheet" />
        <link href="~/css/styles/select2.css" rel="stylesheet" />
        <link href="~/css/styles/custmstyle.css" rel="stylesheet" />
        <link href="~/datepicker/persian-datepicker.min.css" rel="stylesheet" />
    </environment>

    <environment names="Staging,Production">
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge">
        <meta content="width=device-width, initial-scale=1" name="viewport" />
        <title>Solved Test</title>
        <link rel="icon" href="~/images/favicon.ico" type="image/x-icon">
        <link href="~/css/app.min.css" rel="stylesheet">
        <link href="~/js/bundles/materialize-rtl/materialize-rtl.min.css" rel="stylesheet">
        <link href="~/css/style.css" rel="stylesheet" />
        <link href="~/css/styles/all-themes.css" rel="stylesheet" />
        <link href="~/css/styles/select2.css" rel="stylesheet" />
        <link href="~/css/styles/custmstyle.css" rel="stylesheet" />
        <link href="~/datepicker/persian-datepicker.min.css" rel="stylesheet" />
    </environment>

    @RenderSection("content", required: false)

</head>

<body class="light rtl">
    <div class="page-loader-wrapper">
        <div class="loader">
            <div class="m-t-30">
                <img class="loading-img-spin" src="~/images/loading.png" alt="admin">
            </div>
            <p>لطفا صبر کنید...</p>
        </div>
    </div>  
    <div class="overlay"></div>
    <nav class="navbar">
        <div class="container-fluid border-right-3">
            <div class="navbar-header">
                <a href="#" onClick="return false;" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-collapse"
                   aria-expanded="false"></a>
                <a href="#" onClick="return false;" class="bars"></a>
                <a class="navbar-brand" href="index.html">
                    <img src="~/images/logo.png" alt="" />
                    <span class="logo-name">Solved Test</span>
                </a>
            </div>
        
            <div class="collapse navbar-collapse" id="navbar-collapse">
                <ul class="nav navbar-nav navbar-left">
                    <li>
                        <a href="#" onClick="return false;" class="sidemenu-collapse">
                            <i class="nav-hdr-btn ti-align-left"></i>
                        </a>
                    </li>
                </ul>
                @*@(await Component.InvokeAsync("Navbar"))*@
            </div>
        </div>
    </nav>
 
    <div>
        <aside id="leftsidebar" class="sidebar">
            <div class="menu">
                <ul class="list">
                    <li>
                        <div class="sidebar-profile clearfix">
                            <div class="profile-info">
                                <h3>داشبورد مدیریت</h3>
                                <hr>
                            </div>
                        </div>
                    </li>
                    <li class="active titr">
                        <a asp-controller="Home" asp-action="Index" class="p-2 border-radius-per-5 ml-3 mr-3"
                           style="background-color: #f3f3fb;">
                            <i class="material-icons font-weight-bold titr">dashboard</i>
                            <span class="titr ">
                                داشبورد
                            </span>

                        </a>
                    </li>


                    <li>
                        <a asp-controller="Price" asp-action=Index>
                            <i class="material-icons font-weight-bold">monetization_on</i>
                            <span class="icon-name">قیمت روزانه</span>
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Product" asp-action=Index>
                            <i class="material-icons">business</i>
                            <span class="icon-name">مدیریت محصولات</span>
                        </a>
                    </li>
                    <li>
                        <a href="#" onClick="return false;" class="menu-toggle">
                            <i class="material-icons font-weight-bold">menu</i>
                            <span class="icon-name "> گزارشات</span>
                        </a>
                        <ul class="ml-menu">
                            <li>
                                <a asp-controller="Report" asp-action=RemovedProduct>حذف شده از لیست فروش</a>
                            </li>
                            <li>
                                <a  asp-controller="Report" asp-action=ChangePriceProduct>محصولات با تغییر قیمت</a>
                            </li>
                            <li>
                                <a  asp-controller="Report" asp-action=NewProduct>اضافه شده به لیست فروش</a>
                            </li>
                        </ul>
                    </li>
                    <hr class=" mr-3 ml-3" />

                </ul>
            </div>
        </aside>      
    </div>
  
    <section class="content">
        <div class="container-fluid">
            @RenderBody()

        </div>
    </section>

    <environment names="Development">

        <script src="~/js/app.min.js"></script>
        <script src="~/js/chart.min.js"></script>
        <script src="~/js/admin.js"></script>
        <script src="~/js/bundles/apexcharts/apexcharts.min.js"></script>
        <script src="~/js/pages/index.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/datepicker/persian-date.min.js"></script>
        <script src="~/datepicker/persian-datepicker.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $(".brithDay").pDatepicker({
                    autoClose: true,
                    format: 'YYYY/MM/DD',
                    initialValue: true,
                    initialValueType: 'persian'
                });

            });
        </script>
        <script>
            $.fn.digits = function () {
                return this.each(function () {
                    $(this).text($(this).text().replace(/(\d)(?=(\d\d\d)+(?!\d))/g, "$1,"));
                })
            }
            $(".numberskama").digits();

        </script>
    </environment>

    <environment names="Staging,Production">
        <script src="~/js/app.min.js"></script>
        <script src="~/js/chart.min.js"></script>
        <script src="~/js/admin.js"></script>
        <script src="~/js/bundles/apexcharts/apexcharts.min.js"></script>
        <script src="~/js/pages/index.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.3/js/select2.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.16.0/jquery.validate.min.js"></script>
        <script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.6/jquery.validate.unobtrusive.min.js"></script>
        <script src="~/datepicker/persian-date.min.js"></script>
        <script src="~/datepicker/persian-datepicker.min.js"></script>
        <script type="text/javascript">
            $(document).ready(function () {
                $(".brithDay").pDatepicker({
                    autoClose: true,
                    format: 'YYYY/MM/DD',
                    initialValue: true,
                    initialValueType: 'persian'
                });

            });
        </script>
    </environment>

    @RenderSection("scripts", required: false)
</body>
</html>


